@model List<WebStore.Models.DbModel.Category>

<div id="conteiner">
    <h4 style="color:brown; margin-left: 100px;"> <b> Категорії </b></h4>
</div>

<div id="container">
   <span id="cat"> <a asp-action="Create">Добавити категорію</a></span> 
</div>

<hr />
@if (Model != null)
{
    <div  id="container">
        <table class="table">
            <thead>
                <tr>
                    <th>Назва</th>
                </tr>
                <tr> </tr>
                <tr> </tr>
            </thead>
            @foreach (var cat in Model)
            {
                <tbody>
                    <tr>
                        <td><a id="conteiner" href="@Url.Action("ProductListForAdmin","Product", new {categoryId = cat.Id })">
                            <br/><img src="@cat.Image" id="Img_logo"><span id="cardBord"><b> @cat.Name </b></span>
                            </a>
                        </td>
                        <td>
                            <form asp-action="Edit" asp-route-id="@cat.Id" method="post">
                                <button type="submit" >
                                    Редагувати
                                </button>
                            </form>
                        </td>
                        <td>
                            <form asp-action="Delete" asp-route-id="@cat.Id" method="post">
                                <button type="submit" class="btn btn-sm btn-danger">
                                    Видалити
                                </button>
                            </form>
                        </td>

                    </tr>
                </tbody>
            }
        </table>
    </div>
}

<style>
    #Img_logo {
        width: 15%;
        border: 1px solid #ddd;
        border-radius: 4px;
        padding: 10px;
    }
   /* #cat {
        background-color: #f1f1f1;
