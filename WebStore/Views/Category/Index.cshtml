@model List<WebStore.Models.DbModel.Category>

<div id="conteiner">
    <h4 style="color:brown; margin-left: 100px;"> <b> Категорії </b></h4>
</div>

<div id="container">
   <span id="cat"> <a asp-action="Create">Добавити категорію</a></span> 
</div>

<hr />
@if (Model != null)
{
    <div class="cont" id="container">
        <table class="table">
            <thead>
                <tr>
                    <th>Назва</th>
                </tr>
                <tr> </tr>
                <tr> </tr>
            </thead>
            @foreach (var cat in Model)
            {
                <tbody>
                    <tr>
                        <td>@cat.Name &nbsp; <span><img  src="@cat.Image" style="width: 10%;"></span></td>
                        <td>
                            <form asp-action="Edit" asp-route-id="@cat.Id" method="post">
                                <button type="submit" >
                                    Редагувати
                                </button>
                            </form>
                        </td>
                        <td>
                            <form asp-action="Delete" asp-route-id="@cat.Id" method="post">
                                <button type="submit" class="btn btn-sm btn-danger">
                                    Видалити
                                </button>
                            </form>
                        </td>

                    </tr>
                </tbody>
            }
        </table>
    </div>
}

<style>
    #cat {
        background-color: #f1f1f1;
        border: 1px solid #ddd;
        border-radius: 4px;
        padding: 10px;
    }
    #container {
        background-color: aliceblue;
        border: 1px solid #ddd;
        border-radius: 4px;
        padding: 25px;
    }
</style>

