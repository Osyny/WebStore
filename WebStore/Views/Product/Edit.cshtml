@model WebStore.Models.ViewModel.Products.ProductEditVm

<div id="container">
    <h4> <b> Редагування </b></h4>
</div>
<hr />


<form asp-action="EditSubmit" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div id="container">
        <input type="hidden" name="Id" value="@Model.Id" />
        <div class="form-group">
            <label for="Name">Назва</label>
            <input name="Name" class="form-control" value="@Model.Name" />
        </div>
        <hr />
        <!-- Image -->
        <div class="form-group">

            <div class="col-md-10">
                <img id="Img_lpgo" src="@Model.Image">
                <input type="file" name="Image" class="form-control" value="@Model.Image" />
            </div>
        </div>

        @*<select for="CategoryId" asp-items="@Model.Categories">
            <option>Виберіть</option>
        </select>*@
        <hr />
        <h5>Категорія </h5>
        @Html.DropDownList("CategoryId", Model.Categories, Model.CategoryName);
        <hr />
        <div class="form-group">
            <label for="PriceGoods"><b>Ціна</b></label>
            <input type="text" name="PriceGoods" class="form-control" value="@Model.PriceGoods" />
        </div>
        <hr />
        <div class="form-group">
            <label for="Discription"><b>Опис</b></label>
            <input name="Discription" class="form-control" value="@Model.Discription" />
        </div>
        <br />
        <div class="form-group">
            <label for="DiscriptionFull"><b>Детальний опис</b></label>
            <input name="DiscriptionFull" class="form-control" value="@Model.DiscriptionFull" />
        </div>

        <button type="submit" class="btn btn-primary">Змінити</button>

    </div>
</form>

<style>
    #Img_lpgo {
        width: 20%;
        
        border: 1px solid #ddd;
        border-radius: 4px;
        padding: 10px;
    }

    #container {
        background-color: aliceblue;
        border: 1px solid #ddd;
        border-radius: 4px;
        padding: 25px;
    }
</style>

