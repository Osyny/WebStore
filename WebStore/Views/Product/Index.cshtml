@model List<WebStore.Models.ViewModel.Products.ProductVm>

<div id="conteiner">
    <h4 style="color:brown;"> <b>&nbsp; &nbsp; Сумки ручної роботи </b></h4>
</div>
<hr />

<div id="container">
    @foreach (var pr in Model)
    {
        <div class="card">
            <a href="@Url.Action("About", "Product", new { Id = pr.Id })">
                <img src="@pr.Image" alt="Avatar" style="width:100%">
                <h5><b>@pr.Name</b></h5>
            </a>
                <div class="container">
                    <h4><b>@pr.PriceGoods &nbsp;грн</b></h4>
                    <hr/>
                    <p>@pr.Discription</p>
                </div>
            
        </div>
    }
</div>

