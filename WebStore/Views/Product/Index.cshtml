@model WebStore.Models.ViewModel.Products.ProductsVm

<div id="container">
    <h4 style="color:brown;text-align:center;"> <b>&nbsp; &nbsp; @Model.CategoryName </b></h4>
</div>


<hr />

    <form asp-action="Index" asp-controller="Product">
        <input type="hidden" name="categoryId" value="@Model.CategoryId" />
        <input type="text" name="priceGoods" placeholder=" Пошук по ціні" />
        <input type="text" name="name" placeholder=" Пошук по назві  " />
        <button type="submit"> Пошук </button>
    </form>

<hr />


<div id="container">
    @foreach (var pr in Model.Products)
    {
        <div class="card" id="cardBord">
            <a href="@Url.Action("About", "Product", new { Id = pr.Id })">
                <img src="@pr.Image" alt="Avatar" style="max-width: 100%; height: auto;">
                <h5><b>@pr.Name</b></h5>
            </a>
            <div class="conteiner">
                <h4><b>@pr.PriceGoods &nbsp;грн</b></h4>
                <hr />
                <p>@pr.Discription</p>
            </div>

        </div>
    }
</div>



<style>


    .card {
        box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
        transition: 0.3s;
        border-radius: 5px; /* 5px rounded corners */
        width: 30%;
        display: inline-block;

        text-align: center;
        
        margin-left: 15px;
        margin-bottom: 10px;


    }

        .card:hover {
            box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
        }

    .conteiner {
        /*padding: 2px 16px;*/
        border: 1px solid #ddd;
        border-radius: 4px;
        padding: 10px;
    }
    img {
        border-radius: 5px 5px 0 0;
        margin-right:10px;
    }


    #container {
        background-color: aliceblue;
        border: 1px solid #ddd;
        border-radius: 4px;
        padding: 25px;
    }
    #cardBord {
       
        border: 1px solid #ddd;
        border-radius: 4px;
        padding: 25px;
    }
        #cardBord:hover {
            box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
        }
</style>
