@model WebStore.Models.ViewModel.Roles.ChangeRoleViewModel

<div>
    <h4>Зареєстровані працівники </h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="UserId" />
                <div class="form-group">
                    <label asp-for="UserEmail" class="control-label"></label>
                    <input asp-for="UserEmail" class="form-control" />
                    <span asp-validation-for="UserEmail" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="UserRoles" class="control-label"></label>
                    @*<input asp-for="UserRoles" class="form-control" />*@
                    @foreach (var role in Model.UserRoles)
                    {
                        <ul>
                            <li><input asp-for="@role" class="text-danger" /></li>
                        </ul>


                    }
                </div>

                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>
