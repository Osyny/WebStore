@model IEnumerable<WebStore.Models.DbModel.AccountUser>
<hr />
<div class="cont" id="container">
    <h3 style="text-align:center;">Кабінет Admin</h3>

</div>
<hr />
<div class="cont" id="container">
    @*<a asp-action="Create" asp-controller="Roles">Добавити роль</a>*@
    &nbsp;&nbsp;&nbsp;
    <a class="btn btn-sm btn-primary" asp-action="Index" asp-controller="Roles" asp-route-userid=""><h4><b>Ролі</b></h4></a>
    &nbsp;&nbsp;&nbsp;
    <a class="btn btn-sm btn-primary" asp-action="UserList" asp-controller="Roles"><h4><b>Користувачі</b></h4></a>
    &nbsp;&nbsp;&nbsp;
    <a class="btn btn-sm btn-primary" asp-action="Index" asp-controller="Category"><h4><b>Категорії товарів</b></h4></a>

</div>
<hr />
<h3>Список користувачів</h3>
<hr />

<div class="cont" id="container">
    <table class="table">
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>


                <td>
                    <form asp-action="DeleteUser" asp-route-userId="@user.Id" method="post">
                        <button type="submit" class="btn btn-sm btn-danger">
                            Удалить
                        </button>
                    </form>
                </td>
                <td>
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-controller="Roles" asp-route-userid="@user.Id">Edit User</a>
                </td>
            </tr>
        }
    </table>
</div>

<style>
    #container {
        background-color: aliceblue;
    }

    .cont {
        border: 1px solid #ddd;
        border-radius: 4px;
        padding: 5px;
    }
</style>
