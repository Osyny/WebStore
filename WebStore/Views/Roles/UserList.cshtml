@model IEnumerable<WebStore.Models.DbModel.AccountUser>

<div id="container">
    <div >
        &nbsp;&nbsp;&nbsp;
        <a class="cont"  asp-action="Index" asp-controller="Roles" asp-route-userid=""><b>Ролі</b></a>
        @*&nbsp;&nbsp;&nbsp;
        <a class="cont"  asp-action="UserList" asp-controller="Roles"><b>Користувачі</b></a>*@
        &nbsp;&nbsp;&nbsp;
        <a class="cont"  asp-action="Index" asp-controller="Category"><b>Категорії товарів</b></a>

    </div>
</div>
<hr />
<div id="container">
    <h3 style="text-align:center;">Кабінет Admin</h3>

</div>
<hr />
<h3>Список користувачів</h3>
<hr />

<div id="container">
    <table class="table">
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>


                <td>
                    <form asp-action="DeleteUser" asp-route-userId="@user.Id" method="post">
                        <button type="submit" class="btn btn-sm btn-danger">
                            Удалить
                        </button>
                    </form>
                </td>
                <td>
                    <a style=" background-color: #f1f1f1;" asp-action="Edit" asp-controller="Roles" asp-route-userid="@user.Id">Edit User</a>
                </td>
            </tr>
        }
    </table>
</div>

<style>
    #container {
        
        background-color: aliceblue;
        border: 1px solid #ddd;
        border-radius: 4px;
        padding: 25px;
    }

    .cont {
        width: 30%;
        margin-left: 20px;
        border: 1px solid #ddd;
        border-radius: 4px;
        padding: 5px;
        background-color: #f1f1f1;
