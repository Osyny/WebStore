@model List<WebStore.Models.DbModel.Bascket>

<h4 style="color:brown; margin-left: 100px;"> <b> Корзина </b></h4>
<hr />
<div>
    <div id="contMenu">
        <a asp-action="" asp-controller="">Оформити замовлення </a>
    </div>
    <div id="contMenu">
        <a asp-action="UserList" asp-controller="Category">Продовжити покупки </a>
    </div>
</div>
<br />
<br />
<hr />

@if (Model != null)
{
    <div class="cont" id="container">
        <table class="table">
            <thead>
                <tr>
                    <th>Номер</th>
                    <th></th>
                    <th>Назва</th>
                    <th>Ціна</th>
                    <th>Опис</th>

                    <th></th>
                </tr>

            </thead>
            <tbody>
                @foreach (var bask in Model)
                {


                    <tr>
                        <td>@bask.Product.Number</td>
                        <td><img id="Img_logo" src="@bask.Product.Image"></td>
                        <td><b> @bask.Product.Name </b></td>
                        <td><b>@bask.Product.PriceGoods&nbsp; грн</b></td>
                        <td>@bask.Product.Discription</td>

                        <td>
                            <form asp-action="Delete" asp-route-id="@bask.Id" method="post">
                                <button type="submit" class="btn btn-sm btn-danger">
                                    Видалити
                                </button>
                            </form>
                        </td>

                    </tr>

                }
            </tbody>
        </table>
        <hr />
        <div>
            <h4 style="color:brown; text-align:center;"><b>Ціна: @Model.Sum(p => p.Product.PriceGoods)</b></h4>
        </div>
    </div>

  
}



<style>
    #Img_logo {
        width: 80%;
        border: 1px solid #ddd;
        border-radius: 4px;
        padding: 5px;
    }

    #contMenu {
        background: #f1f1f1;
        font-weight: bold;
        float: left;
        margin-left: 15px;
        margin-right: 15px;
        margin-bottom: 50px;
        text-align: center;
        padding: 10px;
    }

    #container {
        background-color: aliceblue;
        border: 1px solid #ddd;
        border-radius: 4px;
        padding: 25px;
    }
</style>
